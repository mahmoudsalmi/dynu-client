    "declarationMap": true,
    "sourceMap": true,
    "outDir": "./dist/",
    "removeComments": false,
    "strict": true,
    "noImplicitAny": false,
    "resolveJsonModule": true
  },
  "exclude": [
    "lib/**/*",
    "test/**/*",
    "dist/**/*",
    "index.ts"
  ]
}
